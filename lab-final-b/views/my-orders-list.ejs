<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Order History - BESAFARI</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <body>
    <div class="container py-5">
      <h1>Order History</h1>
      <p class="text-muted">Email: <strong><%= email %></strong></p>

      <!-- Back link to search form -->
      <a href="/order/my-orders" class="btn btn-outline-secondary mb-3">Search Another Email</a>

      <!-- If no orders found -->
      <% if (!orders || orders.length === 0) { %>
        <div class="alert alert-info" role="alert">
          No orders found for this email address.
        </div>
      <% } else { %>
        <!-- Table of orders -->
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Order ID</th>
              <th>Date</th>
              <th>Items</th>
              <th>Total</th>
              <th>Discount</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(function(order) { %>
              <tr>
                <td>
                  <strong><%= order._id %></strong>
                </td>
                <td>
                  <small><%= new Date(order.createdAt).toLocaleString() %></small>
                </td>
                <td>
                  <small>
                    <% order.items.forEach(function(item, idx) { %>
                      <div><%= item.name %> x<%= item.qty %></div>
                      <% if (idx === 2 && order.items.length > 3) { %>
                        <em>... and <%= order.items.length - 3 %> more</em>
                      <% } %>
                    <% }); %>
                  </small>
                </td>
                <td>
                  <strong>$<%= order.totalPrice.toFixed(2) %></strong>
                </td>
                <td>
                  <% if (order.discount && order.discount.code) { %>
                    <small class="text-success">
                      <%= order.discount.code %><br>
                      -$<%= order.discount.amount.toFixed(2) %> (<%= order.discount.percent %>%)
                    </small>
                  <% } else { %>
                    <small class="text-muted">â€”</small>
                  <% } %>
                </td>
                <td>
                  <span class="badge bg-<%= order.status === 'Placed' ? 'success' : 'warning' %>">
                    <%= order.status %>
                  </span>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>

        <!-- Summary -->
        <div class="mt-4 p-3 bg-light rounded">
          <p class="mb-0"><strong>Total Orders:</strong> <%= orders.length %></p>
          <p class="mb-0"><strong>Combined Value:</strong> $<%= orders.reduce((sum, o) => sum + o.totalPrice, 0).toFixed(2) %></p>
        </div>
      <% } %>
    </div>
  </body>
</html>
