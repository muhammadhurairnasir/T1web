<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>My Orders - BESAFARI</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <body>
    <div class="container py-5">
      <h1>My Orders</h1>
      <p class="text-muted">Enter your email address to view your order history.</p>

      <!-- Error message if search failed -->
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
      <% } %>

      <!-- Email form for order lookup -->
      <div class="card" style="max-width: 500px;">
        <div class="card-body">
          <form method="POST" action="/order/my-orders">
            <div class="mb-3">
              <label for="email" class="form-label">Email Address</label>
              <input 
                type="email" 
                class="form-control" 
                id="email" 
                name="email" 
                placeholder="your@email.com" 
                required
              >
              <small class="form-text text-muted">The email you used when placing your order.</small>
            </div>
            <button type="submit" class="btn btn-primary">Search Orders</button>
            <a href="/wildlife" class="btn btn-outline-secondary">Continue Shopping</a>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
