<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Success - BESAFARI</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

  <!-- Header Section -->
  <div class="hero-section order-success">
    <header class="d-flex justify-content-between align-items-center px-4">
      <div class="logo">
        <img src="/images/safarilogo.png" alt="SAFARI">
      </div>
      <nav>
        <ul class="nav-list">
          <li><a href="/">START</a></li>
          <li><a href="/#section2">MUST VISIT</a></li>
          <li><a href="/wildlife">WILDLIFE</a></li>
          <li><a href="/#section4">TOURS</a></li>
          <li><a href="/#section5">CONTACT</a></li>
          <li><a href="/checkout">BUY NOW</a></li>
        </ul>
      </nav>
    </header>

    <img class="image-square" src="/images/square.png" width="30" height="30" alt="square">

    <div class="welcome">
      <h1>Order Confirmation</h1>
    </div>
  </div>

  <!-- Success Section -->
  <div class="success-section">
    <div class="success-card">
      <div class="success-icon">✔</div>
      <div class="success-text">Your Order Has Been Placed!</div>
      <% if (typeof order !== 'undefined' && order) { %>
        <div class="success-subtext">Thank you for shopping with BESAFARI.</div>
        <div class="mt-3 text-start">
          <p><strong>Order ID:</strong> <%= order._id %></p>
          <p><strong>Placed:</strong> <%= new Date(order.createdAt).toLocaleString() %></p>
          <p><strong>Status:</strong> <%= order.status %></p>

          <h5 class="mt-3">Items</h5>
          <ul class="list-group mb-3">
            <% order.items.forEach(function(it){ %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <div><strong><%= it.name %></strong></div>
                  <div class="text-muted">Qty: <%= it.qty %> · $<%= it.price.toFixed(2) %> each</div>
                </div>
                <div>$<%= it.lineTotal.toFixed(2) %></div>
              </li>
            <% }); %>
          </ul>

          <p class="mb-1"><strong>Total items:</strong> <%= order.totalQty %></p>
          <p class="mb-0"><strong>Grand total:</strong> $<%= order.totalPrice.toFixed(2) %></p>
        </div>
      <% } else { %>
        <div class="success-subtext">Thank you for shopping with BESAFARI. You will receive a confirmation email shortly.</div>
      <% } %>

      <a href="/" class="btn-home mt-3">Back to Home</a>
    </div>
  </div>

  <!-- Footer -->
  <div class="footer">
    <p>© 2025 BESAFARI. All Rights Reserved.</p>
  </div>

</body>
</html>

